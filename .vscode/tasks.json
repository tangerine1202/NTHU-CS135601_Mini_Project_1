{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${relativeFile}",
        "lexer_parser.c",
        "code_gen.c",
        "instruction.c",
        "helpful.c",
        "-I",
        "${workspaceRoot}",
        "-o",
        "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
